<html>

<body>
<div>
    <form method="post">
        <input type="text" name="name" placeholder="Name"/>
        <input type="password" name="password" placeholder="password"/>
        <input type="email" name="email" placeholder="email"/>
        <button type="submit">Submit</button>
    </form>
</div>
<div>Users</div>
{{#users}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
        <span>{{password}}</span>
        <i>{{role}}</i>
        <span>{{email}}</span>
    </div>
{{/users}}
</body>